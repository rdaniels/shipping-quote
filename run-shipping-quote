#!/usr/bin/env ruby
$LOAD_PATH.unshift File.expand_path('./lib', __FILE__)
require './lib/shipping-quote'

cart_items = []
class StubItem
  def shipCode; 'UPS';   end
  def isGlass;  end
  def qty;  1;  end
  def weight; 1;  end
  def backorder; 0;  end
  def vendor; 10;  end
end
class StubCustomer
  def country; 'US'; end
  def city; 'Tampa'; end
  def state; 'FL' end
  def zip; '33609'; end
end
item = StubItem.new #{ shipCode: 'UPS', isGlass: nil, qty: 1, weight: 1, backorder: 0, vendor: 10 }
cart_items[0] = item
config = YAML::load(IO.read("./shipping-quote-spec.yml"))
puts config

ship = ShippingQuote::Shipping.new(cart_items, config)


puts ship.calculate_boxing(0, 1, 0)

destination = { :country => 'US', :province => 'FL', :city => 'Tampa', :postal_code => '33609'}
packages = ship.create_packages
puts ship.quotes(destination,packages)